<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.maces.ecommerce.skcashandcarry">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:launchMode="singleTop"
        android:roundIcon="@drawable/app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        android:windowSoftInputMode="stateHidden"
        tools:targetApi="m">
        <activity android:name=".OfferDetails"></activity>
        <activity
            android:name=".View.order_product_detail"
            android:theme="@style/Product" />
        <activity
            android:name=".View.Category_Product"
            android:theme="@style/Product" />
        <activity android:name=".View.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.ForgotPassword"
            android:theme="@style/Product" />
        <activity android:name=".View.order_placed" />
        <activity
            android:name=".View.Product_Detail"
            android:theme="@style/Product" />
        <activity android:name=".View.Payment_Screen" />
        <activity
            android:name=".View.Register"
            android:theme="@style/Product" />
        <activity
            android:name=".View.Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".View.Login" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".View.CartActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>